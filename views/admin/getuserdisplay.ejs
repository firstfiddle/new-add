<%- include('../header.ejs') %>
<div class="mt-5"></div>
<!-- table view edit,edit,delete -->
<div class="container-fluid">
 <div class="row">
 <div class="col-md-12">
  <h1 class="mt-5 text-center">Admin Dashboard</h1>
  <table class="table table-bordered table-hover text-center">
    <% if(message.length > 0){%>
      <div class="alert alert-success">
          <%= message %>  
      </div>
  <%} %>
    <tr class="table-danger">
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Status</th>
      <th>Comment</th>
      <th></th>
      <th>Action</th>
    </tr>
    <% c.forEach((item)=>{ %>
      <tr>
          <td><%= item.name %></td>
          <td><%= item.email %></td>
          <td><%= item.number %></td>
          <td><%= item.status %></td>
          <td>
            <form action="/update_status/<%= item._id %>" method="post">
                <textarea name="comment"></textarea>
                <input type="hidden" name="name" value="<%= item.name %>">
                <input type="hidden" name="email" value="<%= item.email %>">
        </td>
         <td>
            <button type="submit" name="status" class="btn btn-success mb-2"
                value="Approved">Approved</button>
            <button type="submit" name="status" class="btn btn-danger mb-2"
                value="Reject">Reject</button>
        </form>
          <td>
              <a href="/admin/courseview/<%=item.id %>" class="btn btn-primary mb-2">View</a>
              <a href="/admin/courseedit/<%=item.id %>" class="btn btn-info mb-2">Edit</a>
              <a href="/admin/coursedelete/<%=item.id %>" class="btn btn-danger">Delete</a>
            </td>
      </tr>
    <% }) %>
     
  </table>
 </div>
 </div>
</div>


  <!----footer end----->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
</body>
</html>