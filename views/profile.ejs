<%- include('./header.ejs') %>
<div class="container " style="margin-top: 7rem;">
 <h1 class="text-center bg-success">PROFILE UPDATE</h1>
<div class="row mb-5">
<div class="col-md-12 ">
    <div class="card px-5 bg-warning">
        <div class="py-3 text-center">
            <img class="rounded-circle" width="200px" height="200" src="<%= image.url %>" alt="">
        </div>
         <h3>Name: <%=n %></h3>
         <h3>Eamil: <%=e%></h3>
         <% if(message.length > 0){%>
          <div class="alert alert-success">
              <%= message %>  
          </div>
      <%} %>
        <div class="mb-3 d-flex justify-content-between">
           <button type="submit" class="btn btn-danger me-2" data-bs-toggle="modal" data-bs-target="#profileupdate">Profile Update</button>
           <button type="submit" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#changepassword">Change Password</button>
        </div>
    </div>
</div>
</div>
</div>
<!--profile update model -->
<div class="modal fade" id="profileupdate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Profile Update</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
        <div class="modal-body">
         <form action="/profileupdate" method="post" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="">Name</label>
            <input type="text" name="name" value="<%=n%>" class="form-control" required>
          </div>
          <div class="mb-3">
            <label for="">Email</label>
            <input type="email" name="email" value="<%=e%>" class="form-control" required>
          </div>
          <div class="mb-3">
            <label for="">Image</label>
            <input type="file" name="image"  class="form-control" >
            <img src="<%= image.url %>" width="50px" height="50" class="mt-3" alt="">
          </div>
          <div class=" text-center">
            <button type="submit" class="btn btn-primary ">Update Profile</button>
          </div>
         </form>
        </div>
        
      </div>
    </div>
  </div>
  <!--profile update model end -->
  <!-- change password model -->
  <div class="modal fade" id="changepassword" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Change Password</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
        <div class="modal-body">
         <form action="/changepassword" method="post">
          <div class="mb-3">
           
            <label for="">Old Password</label>
            <input type="text" name="op"  class="form-control" required>
          </div>
          <div class="mb-3">
            <label for="">New Password</label>
            <input type="text" name="np"  class="form-control" required>
          </div>
          <div class="mb-3">
            <label for="">Conform Password</label>
            <input type="text" name="cp"  class="form-control" required>
          </div>
          <div class=" text-center">
            <button type="submit" class="btn btn-primary ">Update Password</button>
          </div>
         </form>
        </div>
        
      </div>
    </div>
  </div>
  <!-- change password end -->
<%- include('./footer.ejs') %>