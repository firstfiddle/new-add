<%- include('../header.ejs') %>
<div class="container">
    <% if(message.length > 0){%>
        <div class="alert alert-success">
            <%= message %>  
        </div>
    <%} %>
    <div class="row">
        <h1 class="text-center mt-5">Course Display</h1>
        <div class="col-md-12 mt-5">
            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Comment</th>
                        <th>Action</th>
                    </tr>
                </thead>
                
                <tbody>
                    <% d.forEach((item)=>{ %>
                        <tr>
                            <td><%= item.id %></td>
                            <td><%= item.name %></td>
                            <td><%= item.email %></td>
                            <td><%= item.number %></td>
                            <td class="bg-warning"><%= item.status %></td>
                            <td><%= item.comment %></td>
                            <td>
                              <a href="/courseview/<%=item.id %>" class="btn btn-primary">View</a>&nbsp;
                              <a href="/courseedit/<%=item.id %>" class="btn btn-info ">Edit</a>
                              <!-- <a href="/coursedelete/<%=item.id %>" class="btn btn-danger">Delete</a> -->
                            </td>
                        </tr>
                   <% }) %>
                  
                </tbody>
              </table>
        </div>  
    </div>
</div>
  <!----footer end----->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
</body>
</html>